<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="../css/main.css">
     <!-- BOOTSTRAP -->
     <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
     <!-- JQUERY -->
     <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>
     <!-- BUNDLE -->
     <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-p34f1UUtsS3wqzfto5wAAmdvj+osOnFyQFpp4Ua3gs/ZVWx6oOypYoCJhGGScy+8" crossorigin="anonymous"></script> 

    <title>Pagina principal Ucm-Cau</title>
</head>
<body class="bodyB">
    <%- include("header2") %>
    <nav class="barraNavegacion navbar navbar-expand-sm">
        
        <ul class="navbar-nav">
            <% if (!esTecnico) { %>
            <li class="nav-item">
                <a class = "elemNavBar " href="/misAvisos">MIS AVISOS</a>
            </li>
            <li class="nav-item">
                <a class = "elemNavBar" href="/historicoAvisos">HISTÓRICO DE AVISOS</a>
            </li>
            <% }else{ %>
            <li class="nav-item">
                <a class = "elemNavBar " href="/avisosEntrantes">AVISOS ENTRANTES</a>
            </li>
            <li class="nav-item">
                <a class = "elemNavBar" href="/misAvisos">MIS AVISOS</a>
            </li>
            <li class="nav-item">
                <a class = "elemNavBar" href="/historicoAvisos">HISTÓRICO DE AVISOS</a>
            </li>
            <li class="nav-item">
                <a class = "elemNavBar" href="/gestionUsuarios">GESTIÓN DE USUARIOS</a>
            </li>
            <% } %>

        </ul>
    </nav>

    <div class="container colorContainer mt-3">

       <div class="mb-3">
            <form class="form" method="post" action="/busqueda/<%= opcionNav %>">
                <div class="row">
                    <label class="col col 1">BUSCAR</label>
                    <input type="text" name = "barra_nav" class="form-control-sm col offset-2 col-6 m-auto" id="barra_nav_principal">
                    <% if (esTecnico && opcionNav ==="gUs") { %>    
                    <div class="form-check col-1 m-auto">
                        <label class="form-check-label m-auto" id="label_checkBusUsu">Usuarios</label>
                        <input type="checkbox" name = "checkBusUsu" id="check_Bus" value="1" class="form-check-input">
                    </div>
                    <% } %>

                    <button type="submit" class="btn btn-danger col col-2"> BUSCAR</button>
                </div>
            </form>     
       </div>

       <% if (opcionNav === "mAv"){ %>
            <% if(esTecnico) { %>
                <%- include("misAvisosTecnico") %>
            <% }else { %>
                <%- include("misAvisosNormal") %>
            <% } %>
        <% }else if (opcionNav === "hAv"){ %>
            <%- include("historicoAvisos") %>
        <% } else if (opcionNav === "avEnt"){ %>
            <%- include("avisosEntrantes") %>
        <% } else{ %>
            <%- include("gestionUsuarios") %>
        <% } %>

      
    </div>
    
</body>
</html>