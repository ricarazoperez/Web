<div class = "modal fade" data-bs-backdrop = "static"  id="modalAsignarTecnico<%=aviso.idAviso%>">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Asignar Tecnico</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col col-4">
                            <h3>Nombre Usuario: <%= aviso.nombreUsuAviso %> </h3>
                        </div>
                        <div class="col offset-2 col-6">
                            <% if (aviso.tipo === 0) { %>
                            <h4>Aviso: <%= aviso.idAviso %> Sugerencia</h4>
                            <% } else if (aviso.tipo == 1) { %>
                            <h4>Aviso: <%= aviso.idAviso %> Incidencia</h4>
                            <% } else { %>
                            <h4>Aviso: <%= aviso.idAviso %> Felicitacion</h4>
                            <% } %>
                        </div>
                    </div>
                    <div class="row">
                        <h4>Fecha aviso: <%= aviso.fecha %></h4>
                    </div>
                    <div class="row">
                        <h4>Comunicaciones: Correo Electrónico</h4>
                    </div>
                    <div class="row">
                        <% if (aviso.perfil == 0) { %>
                        <h4>Perfil: Alumno </h4>
                        <% }else if (aviso.perfil == 1) { %>
                        <h4>Perfil: PAS </h4>
                        <% }else if (aviso.perfil == 2) { %>
                        <h4>Perfil: PDI </h4>
                        <% }else { %>
                        <h4>Perfil: Antiguo Alumno </h4>
                        <% } %>
                    </div>
                    <div class="row">
                        <h4>Observaciones</h4>
                    </div>
                    
                    <div class="row">
                        <textarea name="" readonly><%= aviso.texto %></textarea>
                    </div>
                    
                    <form method = "post" action="/asignarTecnico/<%=aviso.idAviso%>">
                        <div class="row">
                            
                            <div class="form-group col">
                                <label for="tecnico_asignado_select">Técnico asignado:</label>
                                <select class="form-select" name="tecnico_asignado" id="tecnico_asignado_select" >
                                    <!-- RELLENAR EL COMBO CON LA LISTA DE TECNICOS PASADA-->
                                    <% tecnicos.forEach(function (tecnico) { %>
                                        <option value="<%= tecnico.id %>"> <%= tecnico.nombre %> </option>
                                    <% }); %>                         
                                </select>
                                <!-- PONER QUE EL BOTON SOLO SE HABILITE CUANDO HAYA UN TECNICO SELECCIONADO -->
                               
                                     <button id ="btn_asignartype="submit" class="mt-3 btn btn-info" data-bs-dismiss="modal">Asignar Técnico</button>
                              
                        </div>
                    </form>
                </div>
            </div>  
        </div>
    </div>
</div>

