<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
    <link rel="stylesheet" href="../css/inicioSesion.css">
    <title>creacion cuenta</title>
</head>
<body>
    <%- include("header") %>

    <div class="container bg-info mt-5">
        <form method="post" action="/registro" enctype ="multipart/form-data">
            <div class="row">
                <div class="form-group col-6">
                    <label for="correoCreacionCuenta">Correo:</label>
                    <input type="email" name = "correo_registro" class="form-control" id="correoCreacionCuenta" required>
                </div>
                <div class="form-group col-6">
                    <label for="nombreCreacionCuenta">Nombre:</label>
                    <input type="text" name = "nombre_registro" class="form-control" id="nombreCreacionCuenta" required>
                </div>
            </div>

            <div class="row">
                <div class="form-group col-6">
                    <label for="passwdCreacionCuenta">Contraseña:</label>
                    <input type="password" name = "passwd_registro" class="form-control" id="passwdCreacionCuenta" required>
                </div>
                <div class="form-group col-6">
                    <label for="perfilCreacionCuenta">Perfil Universitario:</label>
                    <select class="form-select" name="perfil_registro" id="perfilCreacionCuenta" onchange="javascript:showCheckBox()">
                        <option selected value="A">Alumno</option>
                        <option value="PAS">Personal de Administración y Servicios</option>
                        <option value="PDI">Personal Docente e Investigador</option>
                        <option value="AA">Antiguo Alumno</option>
                    </select>
                </div>
            </div>

            <div class="row">
                <div class="form-group col-6">
                    <label for="confirmPasswdCreacionCuenta">Confirmar contraseña:</label>
                    <input type="password" name = "conf_passwd_registro" class="form-control" id="confirmPasswdCreacionCuenta" required>
                </div>
                <% if (errorMsg !== null) { %>
                <div id="error" class="alert alert-danger mt-3 text-center" role="alert">
                    <%= errorMsg %>
                </div>
                <% } %>
        
                <fieldset class="mt-3">
                    <legend>Datos técnico</legend>
                    <div class="form-group col-6 mb-3 d-flex align-items-center justify-content-between">
                        <div class="form-check" style="visibility:hidden">
                            <label class="form-check-label" id="label_checkTec">Técnico</label>
                            <input type="checkbox" name = "checkbox-tecnico" id="check_Tec" value="1" class="form-check-input" onchange="javascript:showContent()">
                        </div>
                        <div style="visibility:hidden">
                            <label for="num_EmpleadoText" id="num_Emp_label">Nº Empleado</label>
                            <input type="text" class = "form-control-sm" name = "numEmpleado_registro" id="num_EmpleadoText">
                        </div>
                    </div>
                </fieldset>
            </div>

            <div class="row mt-3">
                <label for="" id="foto_label">Seleccione Imagen de perfil:</label>
                <input class = "col offset-3 col-6 form-control-sm" name="foto_registro" type="file">
            </div>
            
            <div class="row mt-3">
                <a href="/login" class="col col-5 btn btn-primary">INICIAR SESION</a>
                <button type ="submit" class="col offset-2 col-5 btn btn-primary">CREAR CUENTA</button>
            </div>
            
        </form>
    </div>

    <script>

        function showCheckBox(){
            perfil     = document.getElementById("perfilCreacionCuenta");
            labelCheck = document.getElementById("label_checkTec"); 
            check      = document.getElementById("check_Tec");

            var selectedOption = perfil.options[perfil.selectedIndex];
            if(selectedOption.value === "PAS"){
                check.style.visibility='visible';
                labelCheck.style.visibility='visible';
            } 
            else{
                check.style.visibility='hidden';
                labelCheck.style.visibility='hidden';
            }  
        }

        function showContent() {
            element = document.getElementById("num_EmpleadoText");
            check = document.getElementById("check_Tec");
            label = document.getElementById("num_Emp_label");
            if (check.checked) {
                element.style.visibility='visible';
                label.style.visibility='visible';
            }
            else {
                element.style.visibility='hidden';
                label.style.visibility='hidden';
            }
        }
    </script>
</body>
</html>